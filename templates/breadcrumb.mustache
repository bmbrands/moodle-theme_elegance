{{#hascrumbs}}
<div id="page-navbar" >
    <div class="container-fluid">
        <nav class="breadcrumb-nav elegancewidth" role="navigation" aria-label="breadcrumb">
            <ol class=breadcrumb>
                {{#breadcrumbs}}
                    <li class={{class}}>{{{item}}}</li>
                {{/breadcrumbs}}
            </ol>
            {{#button}}
            <div class="breadcrumb-button">{{{button}}}</div>
            {{/button}}
        <div class="clearfix"></div>
    </div>
</div>
{{/hascrumbs}}