{{!
    @template theme_elegance/widget_banner


    Example context (json):
    {
        "heading": "course name",
        "summary": "This is course ABC",
        "contentimages": [
            "http://placekitten.com/200/300"
        ],
        "contentfiles": [
            "http://domain.com/doc.pdf"
        ],
        "contacts": "contacts html",
        "category": "category html",
        "customfield": ""
    }
}}
<div class="card eboxshadow my-3">
    <div class="card-img-top position-relative" style="max-height: 150px; min-height: 150px; overflow: hidden;">
        {{#contentimages}}
            <img src="{{{ . }}}" class="card-img-top h-100" alt="{{ title }}">
        {{/contentimages}}
        {{^contentimages}}
            <div class="card-img-top h-100 bg-light" style="height: 150px"></div>
        {{/contentimages}}
    </div>
    <div class="card-body">
        <h5 class="card-title">
            {{{ heading }}}
        </h5>
        <p class="card-text">
            <div style="max-height: 107px; overflow: scroll">
                {{{ summary }}}
            </div>
            {{{ category }}}
            {{{ customfield }}}
        </p>
    </div>
    {{#contacts}}
    <div class="card-footer">
      <small class="text-muted">{{{ contacts }}}</small>
    </div>
    {{/contacts}}
</div>
